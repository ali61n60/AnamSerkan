                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">تماس با ما</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Products">محصولات</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Equivalent">معادل یابی روغن</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row page-title">
            <div class="col-sm-3 col-sm-push-9">
                <h1>@ViewData["PageTitle"]</h1>
            </div>
        </div>
        <div class="row">
            @RenderSection("topHeader", required: false)
        </div>
        <br />
        <div class="row middle">
            <div class="col-sm-2 sidenav">
                <p>
                    <a asp-area="" asp-controller="Home" asp-action="Index">خانه</a>
                </p>
                <p>
                    <a asp-area="" asp-controller="Home" asp-action="About">درباره ما</a>
                </p>
                <p>
