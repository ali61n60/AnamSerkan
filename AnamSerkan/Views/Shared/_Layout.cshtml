                </p>
                <p>
                    <a asp-area="" asp-controller="Home" asp-action="Products">محصولات</a>
                </p>
                <p>
                    <a asp-area="" asp-controller="Home" asp-action="Equivalent">معادل یابی روغن</a>
                </p>
            </div>
            <div class="col-sm-10 col-xs-12 main">
                @RenderBody()
            </div>
        </div>
    </div>
    <footer class="container-fluid text-center">
        <div id="footer-middle" style="direction: rtl">
            <div class="row">
                <div class="col-sm-6 col-sm-push-6">
