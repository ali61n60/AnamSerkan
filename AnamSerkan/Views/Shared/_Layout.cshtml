                        <br />
                        <span class="glyphicon glyphicon-earphone"></span>021-44034117
                        <span class="glyphicon glyphicon-earphone"></span>021-44034116
                    </div>
                </div>
            </div>
            <div id="footer-bottom">

                <div class="row">
                    <div class="col-xs-12">
                        &copy; 2017 - anamserkan
                    </div>
                </div>
            </div>
        </footer>
    }


    @RenderSection("scripts", required: false)
</body>
</html>