@model object

@{
    ViewData["Title"] = "خانه";
    ViewData["PageTitle"] = "خانه";
    Layout = "_Layout";
}

@section TopTop
{
    @Html.Partial("TopTop");
}
@section NavBar
{
    @Html.Partial("NavBar")
}
@section PageTitle
{

}
@section TopHeader
{
    <div class="row top-header">
        <div>
            <ul class="bxslider">
                <li><img  src="~/Resources/Images/Products/Oil/behranOil.png" /></li>
                <li><img  src="~/Resources/Images/Products/Oil/bpOil.png" /></li>
                <li><img src="~/Resources/Images/Products/Oil/castrolOil.png" /></li>
                <li><img src="~/Resources/Images/Products/Oil/elfOil.png" /></li>
            </ul>
        </div>
    </div>
    <br />
}
@section SideNav
{
    @Html.Partial("SideNav")
}
@section Body
{
    <div class="row main">
        <h2>خدمات برتر</h2>
        <h2>تکیه بر تجربه و تخصص</h2>
        <h2>عملکرد سریع</h2>
    </div>
}

@section Footer
{
    @Html.Partial("Footer")
}

@section scripts{
    <!-- bxSlider Javascript file -->
    <script src="~/lib/bxslider-4/src/js/jquery.bxslider.js"></script>
    <!-- bxSlider CSS file -->
    <link href="~/lib/bxslider-4/dist/jquery.bxslider.min.css" rel="stylesheet" />
    <script>
        $(document).ready(function () {
            var slider = $('.bxslider').bxSlider();
            slider.startAuto();
        });
    </script>
}