    ViewData["Title"] = "خانه";
    ViewData["PageTitle"] = "خانه";
    Layout = "_Layout";
}

@section TopTop
{
    @Html.Partial("TopTop")
}
@section NavBar
{
    @Html.Partial("NavBar")
}
@section PageTitle
{

}
@section TopHeader
{
    <div class="row top-header">
        <div>
            <ul class="bxslider">
                <li><img  src="~/Resources/Images/FirstPage/1.png" /></li>
                <li><img  src="~/Resources/Images/FirstPage/2.jpg" /></li>
                <li><img src="~/Resources/Images/FirstPage/3.jpg" /></li>
                <li><img src="~/Resources/Images/FirstPage/4.jpg" /></li>
